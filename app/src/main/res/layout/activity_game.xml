<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.braintrainer.Game">

    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="0:30"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="0/0"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeLeft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="2+2"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="40sp" />

    <Button
        android:id="@+id/option0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expression"
        android:layout_marginTop="92dp"
        android:layout_toLeftOf="@+id/expression"
        android:layout_toStartOf="@+id/expression"
        android:onClick="optionCliced"
        android:text="1"
        android:textSize="25sp" />

    <Button
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/option0"
        android:layout_toEndOf="@+id/expression"
        android:layout_toRightOf="@+id/expression"
        android:onClick="optionClicked"
        android:text="2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/option0"
        android:layout_alignRight="@+id/option0"
        android:layout_below="@+id/option0"
        android:layout_marginTop="69dp"
        android:onClick="optionClicked"
        android:text="3"
        android:textSize="25sp" />

    <Button
        android:id="@+id/option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/option2"
        android:layout_alignLeft="@+id/option1"
        android:layout_alignStart="@+id/option1"
        android:onClick="optionClicked"
        android:text="4"
        android:textSize="25sp" />
</RelativeLayout>
